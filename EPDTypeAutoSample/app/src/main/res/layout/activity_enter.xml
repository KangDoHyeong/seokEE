<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="16dp"
    android:background="@color/white"
    tools:context=".enter">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >


        <TextView
            android:id="@+id/textView07"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/borer_black_bottom"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:text="@string/en_tb"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="8dp" />


        <ImageButton
            android:id="@+id/make_room"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:contentDescription="TODO"
            android:scaleType="fitCenter"
            android:src="@drawable/mkroom" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/nanumbarungothic"
            android:gravity="center"
            android:text="@string/make_room"

            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/enter_room"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:contentDescription="TODO"
            android:scaleType="fitCenter"
            android:src="@drawable/joinroom" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/nanumbarungothic"
            android:gravity="center"
            android:text="@string/enter_room"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/mypage"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:contentDescription="TODO"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_mypage" />

        <TextView
            android:id="@+id/tv_mypage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumbarungothic"
            android:gravity="center"

            android:text="@string/my_page"
            android:textSize="25sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>