<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:baselineAligned="false"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
    android:layout_width="fill_parent"
        android:layout_height="82dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/borer_black_bottom"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:windowLightStatusBar="false"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="158dp"
        android:layout_height="54dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/nanumbarungothicbold"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/my_toolbar"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/my_toolbar"
        app:layout_constraintTop_toTopOf="@+id/my_toolbar"
        app:layout_constraintVertical_bias="0.571" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="생년월일"
        android:textColor="#5D5D5D"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/join_joinButton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="일"
        android:textColor="#747474"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/join_joinButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/birthDay" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="년"
        android:textColor="#747474"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/join_joinButton"
        app:layout_constraintStart_toEndOf="@+id/birthYear" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center_vertical|left"
        android:paddingLeft="4dp"
        android:text="성별"
        android:textColor="#5D5D5D"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/idInput"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_border_black"
        android:ems="10"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="  아이디"
        android:inputType="textPersonName"
        android:textColor="#747474"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordInput"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/okbt"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/border_blue"
        android:fontFamily="@font/nanumbarungothic"
        android:onClick="bt_ok"
        android:text="중복확인"
        android:textColor="#3FACDC"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toEndOf="@+id/idInput"
        style="?android:attr/borderlessButtonStyle"
        />


    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edit_border_black"
        android:ems="10"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="  비밀번호"
        android:inputType="textPersonName|textPassword"
        android:textColor="#747474"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/nickInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="월"
        android:textColor="#747474"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/join_joinButton"
        app:layout_constraintStart_toEndOf="@+id/birthMonth" />

    <Spinner
        android:id="@+id/birthYear"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:textColor="#747474"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/join_joinButton"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <Spinner
        android:id="@+id/birthMonth"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:textColor="#747474"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/join_joinButton"
        app:layout_constraintStart_toEndOf="@+id/textView12" />

    <Spinner
        android:id="@+id/birthDay"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:textColor="#747474"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/join_joinButton"
        app:layout_constraintStart_toEndOf="@+id/textView3" />


    <Button
        android:id="@+id/join_joinButton"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="232dp"
        android:background="#3FACDC"
        android:clickable="true"
        android:fontFamily="@font/nanumbarungothicbold"
        android:onClick="bt_join"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        style="?android:attr/borderlessButtonStyle"
        />

    <EditText
        android:id="@+id/nickInput"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_border_black"
        android:ems="10"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="  닉네임"
        android:inputType="textPersonName"
        android:textColor="#747474"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.746"
        app:layout_constraintStart_toEndOf="@+id/textView9">

        <RadioButton
            android:id="@+id/genderMen"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothic"
            android:gravity="center"
            android:text="남자"
            android:textColor="#747474"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/genderWomen"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothic"
            android:gravity="center"
            android:text="여자"
            android:textColor="#747474"
            android:textSize="20dp" />

    </RadioGroup>



</android.support.constraint.ConstraintLayout>